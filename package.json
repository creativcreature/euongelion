{
  "name": "euangelion",
  "version": "0.7.0",
  "private": true,
  "engines": {
    "node": ">=20.10 <25"
  },
  "scripts": {
    "dev": "next dev --port 3333",
    "generate:artwork-manifest": "node scripts/generate-artwork-manifest.mjs",
    "build": "node scripts/check-node-version.mjs && node scripts/generate-artwork-manifest.mjs && next build --webpack",
    "start": "next start --port 3333",
    "ios:sync": "npx cap sync ios",
    "ios:open": "npx cap open ios",
    "ios:run": "npx cap run ios",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "verify:production-contracts": "node scripts/check-production-contracts.mjs",
    "verify:tracking": "node scripts/check-tracking-integrity.mjs",
    "verify:feature-prds": "node scripts/check-feature-prd-integrity.mjs",
    "verify:feature-prd-link": "node scripts/check-feature-prd-update-link.mjs",
    "verify:governance-alignment": "node scripts/check-governance-alignment.mjs",
    "verify:methodology-traceability": "node scripts/check-methodology-traceability.mjs",
    "verify:folder-structure": "node scripts/check-folder-structure-integrity.mjs",
    "verify:appstore-gate": "node scripts/check-appstore-gate.mjs",
    "verify:ios-readiness": "node scripts/check-ios-readiness.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json}\"",
    "prepare": "husky"
  },
  "dependencies": {
    "@capacitor/cli": "^8.1.0",
    "@capacitor/core": "^8.1.0",
    "@capacitor/device": "^8.0.1",
    "@capacitor/ios": "^8.1.0",
    "@gsap/react": "^2.1.2",
    "@revenuecat/purchases-capacitor": "^12.1.2",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.95.3",
    "@upstash/ratelimit": "^2.0.8",
    "@upstash/redis": "^1.36.2",
    "@vercel/analytics": "^1.6.1",
    "framer-motion": "^12.34.0",
    "geist": "^1.7.0",
    "gsap": "^3.14.2",
    "lenis": "^1.3.17",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "stripe": "^20.3.1",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.3",
    "dotenv": "^17.2.4",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.6",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "__tests__/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{css,json,md}": [
      "prettier --write"
    ]
  }
}
