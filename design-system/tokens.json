    "card": {
      "padding": { "$value": "24px", "$type": "dimension" },
      "radius": { "$value": "{borderRadius.lg}", "$type": "dimension" },
      "shadow": { "$value": "{shadow.elevation.md}", "$type": "shadow" }
    },
    "navigation": {
      "height": { "$value": "64px", "$type": "dimension" },
      "heightMobile": { "$value": "56px", "$type": "dimension" }
    },
    "touchTarget": {
      "min": {
        "$value": "44px",
        "$type": "dimension",
        "$description": "WCAG minimum"
      }
    }
  },
  "contrastRatios": {
    "$description": "WCAG 2.1 AA compliance reference",
    "tehomOnScroll": { "ratio": "12.4:1", "passes": "AAA" },
    "goldOnTehom": { "ratio": "5.8:1", "passes": "AA" },
    "goldOnScroll": { "ratio": "2.1:1", "passes": "Decorative only" },
    "scrollOnTehom": { "ratio": "12.4:1", "passes": "AAA" }
  }
