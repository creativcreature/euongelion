{
  "$schema": "https://tr.designtokens.org/format/",
  "name": "EUONGELION Design Tokens",
  "version": "1.0.0",
  "description": "Comprehensive design token system for the EUONGELION platform",
  "philosophy": {
    "tagline": "Ownable. Restrained. Biblical.",
    "principles": [
      "Six colors total (3 bold foundation, 3 intentional accents)",
      "Sans serif primary with generous white space",
      "Dark mode as default (tehom background)",
      "Typography as architecture",
      "Generous white space equals Sabbath rest"
    ]
  },
  "color": {
    "foundation": {
      "tehom": {
        "$value": "#1A1612",
        "$type": "color",
        "$description": "The deep, the void, the beginning. Primary background in dark mode.",
        "rgb": "26, 22, 18",
        "cmyk": "0, 15, 31, 90"
      },
      "scroll": {
        "$value": "#F7F3ED",
        "$type": "color",
        "$description": "Rest, parchment, breathing room. Primary text in dark mode.",
        "rgb": "247, 243, 237",
        "cmyk": "0, 2, 4, 3"
      },
      "gold": {
        "$value": "#C19A6B",
        "$type": "color",
        "$description": "God is Gold - Glory, divine emphasis, signature moments.",
        "rgb": "193, 154, 107",
        "cmyk": "0, 20, 45, 24"
      }
    },
    "intentional": {
      "burgundy": {
        "$value": "#6B2C2C",
        "$type": "color",
        "$description": "Covenant Burgundy - Blood, sacrifice, cross. Use for sacrifice themes.",
        "rgb": "107, 44, 44",
        "darkModeLifted": "#B85555"
      },
      "olive": {
        "$value": "#6B6B4F",
        "$type": "color",
        "$description": "Gethsemane Olive - Garden, wrestling, earth. Use for wilderness themes.",
        "rgb": "107, 107, 79",
        "darkModeLifted": "#9D9D7A"
      },
      "shalomBlue": {
        "$value": "#4A5F6B",
        "$type": "color",
        "$description": "Shalom Blue - Peace, Spirit, water. Use for peace and Spirit themes.",
        "rgb": "74, 95, 107",
        "darkModeLifted": "#7A9AAB"
      }
    },
    "semantic": {
      "background": {
        "$value": "{color.foundation.tehom}",
        "$type": "color"
      },
      "foreground": {
        "$value": "{color.foundation.scroll}",
        "$type": "color"
      },
      "accent": {
        "$value": "{color.foundation.gold}",
        "$type": "color"
      },
      "textPrimary": {
        "$value": "{color.foundation.scroll}",
        "$type": "color"
      },
      "textSecondary": {
        "$value": "rgba(247, 243, 237, 0.7)",
        "$type": "color"
      },
      "textTertiary": {
        "$value": "rgba(247, 243, 237, 0.5)",
        "$type": "color"
      },
      "textMuted": {
        "$value": "rgba(247, 243, 237, 0.4)",
        "$type": "color"
      },
      "border": {
        "$value": "rgba(247, 243, 237, 0.1)",
        "$type": "color"
      },
      "borderStrong": {
        "$value": "rgba(247, 243, 237, 0.2)",
        "$type": "color"
      },
      "surface": {
        "$value": "rgba(247, 243, 237, 0.05)",
        "$type": "color"
      },
      "surfaceRaised": {
        "$value": "rgba(247, 243, 237, 0.08)",
        "$type": "color"
      },
      "overlay": {
        "$value": "rgba(26, 22, 18, 0.8)",
        "$type": "color"
      }
    },
    "feedback": {
      "success": {
        "$value": "#4A6B4F",
        "$type": "color"
      },
      "warning": {
        "$value": "#6B5A4A",
        "$type": "color"
      },
      "error": {
        "$value": "#6B2C2C",
        "$type": "color"
      },
      "info": {
        "$value": "{color.intentional.shalomBlue}",
        "$type": "color"
      }
    }
  },
  "typography": {
    "fontFamily": {
      "display": {
        "$value": "'Monument Grotesk', 'Helvetica Neue', Arial, sans-serif",
        "$type": "fontFamily"
      },
      "body": {
        "$value": "'Monument Grotesk', 'Helvetica Neue', Arial, sans-serif",
        "$type": "fontFamily"
      },
      "masthead": {
        "$value": "'Editorial New', 'Didot', 'Bodoni MT', 'Georgia', serif",
        "$type": "fontFamily"
      },
      "hebrew": {
        "$value": "'SBL Hebrew', 'Times New Roman', serif",
        "$type": "fontFamily"
      },
      "handwritten": {
        "$value": "'Caveat', 'Comic Sans MS', cursive",
        "$type": "fontFamily"
      },
      "serif": {
        "$value": "'EB Garamond', 'Georgia', 'Times New Roman', serif",
        "$type": "fontFamily"
      },
      "system": {
        "$value": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif",
        "$type": "fontFamily"
      },
      "mono": {
        "$value": "'SF Mono', 'Fira Code', 'Consolas', monospace",
        "$type": "fontFamily"
      }
    },
    "fontSize": {
      "xs": {
        "$value": "0.75rem",
