  "borderRadius": {
    "none": { "$value": "0", "$type": "dimension" },
    "sm": { "$value": "2px", "$type": "dimension" },
    "md": { "$value": "4px", "$type": "dimension" },
    "lg": { "$value": "8px", "$type": "dimension" },
    "xl": { "$value": "12px", "$type": "dimension" },
    "2xl": { "$value": "16px", "$type": "dimension" },
    "3xl": { "$value": "24px", "$type": "dimension" },
    "full": { "$value": "9999px", "$type": "dimension" },
    "semantic": {
      "button": { "$value": "{borderRadius.md}", "$type": "dimension" },
      "input": { "$value": "{borderRadius.md}", "$type": "dimension" },
      "card": { "$value": "{borderRadius.lg}", "$type": "dimension" },
      "modal": { "$value": "{borderRadius.xl}", "$type": "dimension" },
      "badge": { "$value": "{borderRadius.full}", "$type": "dimension" }
    }
  },
  "shadow": {
    "elevation": {
      "xs": {
        "$value": "0 1px 2px rgba(26, 22, 18, 0.1)",
        "$type": "shadow"
      },
      "sm": {
        "$value": "0 2px 4px rgba(26, 22, 18, 0.1)",
        "$type": "shadow"
      },
      "md": {
        "$value": "0 4px 8px rgba(26, 22, 18, 0.12)",
        "$type": "shadow"
      },
      "lg": {
        "$value": "0 8px 16px rgba(26, 22, 18, 0.15)",
        "$type": "shadow"
      },
      "xl": {
        "$value": "0 16px 32px rgba(26, 22, 18, 0.2)",
        "$type": "shadow"
      },
      "2xl": {
        "$value": "0 24px 48px rgba(26, 22, 18, 0.25)",
        "$type": "shadow"
      }
    },
    "inset": {
      "default": {
        "$value": "inset 0 2px 4px rgba(26, 22, 18, 0.1)",
        "$type": "shadow"
      },
      "lg": {
        "$value": "inset 0 4px 8px rgba(26, 22, 18, 0.15)",
        "$type": "shadow"
      }
    },
    "focus": {
      "default": {
        "$value": "0 0 0 3px rgba(193, 154, 107, 0.4)",
        "$type": "shadow"
      }
    },
    "special": {
      "glow": {
        "$value": "0 0 20px rgba(193, 154, 107, 0.3)",
        "$type": "shadow"
      },
      "vignette": {
        "$value": "inset 0 0 100px rgba(26, 22, 18, 0.5)",
        "$type": "shadow"
      }
    }
  },
  "transition": {
    "duration": {
      "instant": { "$value": "0ms", "$type": "duration" },
      "fast": { "$value": "150ms", "$type": "duration" },
      "base": { "$value": "200ms", "$type": "duration" },
      "moderate": { "$value": "300ms", "$type": "duration" },
      "slow": { "$value": "400ms", "$type": "duration" },
      "slower": { "$value": "600ms", "$type": "duration" },
      "slowest": { "$value": "800ms", "$type": "duration" }
    },
    "easing": {
      "linear": { "$value": "linear", "$type": "cubicBezier" },
      "in": { "$value": "cubic-bezier(0.4, 0, 1, 1)", "$type": "cubicBezier" },
      "out": { "$value": "cubic-bezier(0, 0, 0.2, 1)", "$type": "cubicBezier" },
      "inOut": {
        "$value": "cubic-bezier(0.4, 0, 0.2, 1)",
        "$type": "cubicBezier"
      },
      "bounce": {
        "$value": "cubic-bezier(0.16, 1, 0.3, 1)",
        "$type": "cubicBezier"
      },
      "smooth": {
        "$value": "cubic-bezier(0.25, 0.1, 0.25, 1)",
        "$type": "cubicBezier"
      }
    }
  },
  "zIndex": {
    "negative": { "$value": -1, "$type": "number" },
    "base": { "$value": 0, "$type": "number" },
    "raised": { "$value": 1, "$type": "number" },
    "dropdown": { "$value": 10, "$type": "number" },
    "sticky": { "$value": 100, "$type": "number" },
    "fixed": { "$value": 200, "$type": "number" },
    "overlay": { "$value": 300, "$type": "number" },
    "modal": { "$value": 400, "$type": "number" },
    "popover": { "$value": 500, "$type": "number" },
    "tooltip": { "$value": 600, "$type": "number" },
    "toast": { "$value": 700, "$type": "number" },
    "max": { "$value": 9999, "$type": "number" }
