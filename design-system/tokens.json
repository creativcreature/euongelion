      "lg": {
        "$value": "1.25rem",
        "$type": "dimension",
        "px": "20px",
        "$description": "Body default"
      },
      "xl": {
        "$value": "1.375rem",
        "$type": "dimension",
        "px": "22px",
        "$description": "Body large"
      },
      "2xl": {
        "$value": "1.5rem",
        "$type": "dimension",
        "px": "24px"
