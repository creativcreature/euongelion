      "5xl": {
        "$value": "3rem",
        "$type": "dimension",
        "px": "48px",
        "$description": "H1"
      },
      "6xl": {
        "$value": "3.5rem",
        "$type": "dimension",
        "px": "56px"
      },
      "7xl": {
        "$value": "4rem",
        "$type": "dimension",
        "px": "64px"
      },
      "8xl": {
        "$value": "5rem",
        "$type": "dimension",
        "px": "80px",
        "$description": "Hero"
      },
      "9xl": {
        "$value": "7.5rem",
