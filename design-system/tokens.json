    "fontWeight": {
      "thin": {
        "$value": 100,
        "$type": "fontWeight"
      },
      "extralight": {
        "$value": 200,
        "$type": "fontWeight"
      },
      "light": {
        "$value": 300,
        "$type": "fontWeight"
      },
      "regular": {
        "$value": 400,
        "$type": "fontWeight"
      },
      "medium": {
        "$value": 500,
        "$type": "fontWeight"
      },
      "semibold": {
        "$value": 600,
        "$type": "fontWeight"
      },
      "bold": {
        "$value": 700,
        "$type": "fontWeight"
      },
      "extrabold": {
        "$value": 800,
        "$type": "fontWeight"
      },
      "black": {
        "$value": 900,
        "$type": "fontWeight"
      }
    },
    "lineHeight": {
      "none": {
        "$value": 1,
        "$type": "number"
      },
      "tight": {
        "$value": 1.1,
        "$type": "number"
      },
      "snug": {
        "$value": 1.3,
        "$type": "number"
      },
      "normal": {
        "$value": 1.5,
        "$type": "number"
      },
      "relaxed": {
        "$value": 1.7,
        "$type": "number",
        "$description": "Body text default"
      },
      "loose": {
        "$value": 2,
        "$type": "number"
      }
    },
    "letterSpacing": {
      "tighter": {
        "$value": "-0.05em",
        "$type": "dimension"
      },
      "tight": {
        "$value": "-0.02em",
        "$type": "dimension"
      },
      "normal": {
        "$value": "0",
        "$type": "dimension"
      },
      "wide": {
        "$value": "0.05em",
        "$type": "dimension"
      },
      "wider": {
        "$value": "0.1em",
        "$type": "dimension"
      },
      "widest": {
        "$value": "0.2em",
        "$type": "dimension"
      }
    }
  },
  "spacing": {
    "unit": {
      "$value": "4px",
      "$type": "dimension",
      "$description": "Base spacing unit"
    },
    "scale": {
      "0": { "$value": "0", "$type": "dimension" },
      "px": { "$value": "1px", "$type": "dimension" },
      "0.5": { "$value": "2px", "$type": "dimension" },
      "1": { "$value": "4px", "$type": "dimension" },
      "1.5": { "$value": "6px", "$type": "dimension" },
      "2": { "$value": "8px", "$type": "dimension", "$description": "xs" },
      "3": { "$value": "12px", "$type": "dimension" },
      "4": { "$value": "16px", "$type": "dimension", "$description": "sm" },
      "5": { "$value": "20px", "$type": "dimension" },
      "6": { "$value": "24px", "$type": "dimension", "$description": "md" },
      "7": { "$value": "28px", "$type": "dimension" },
      "8": { "$value": "32px", "$type": "dimension" },
      "9": { "$value": "36px", "$type": "dimension" },
      "10": { "$value": "40px", "$type": "dimension", "$description": "lg" },
      "11": {
        "$value": "44px",
        "$type": "dimension",
        "$description": "touch target"
      },
      "12": { "$value": "48px", "$type": "dimension" },
      "14": { "$value": "56px", "$type": "dimension" },
      "15": { "$value": "60px", "$type": "dimension", "$description": "xl" },
      "16": { "$value": "64px", "$type": "dimension" },
      "20": { "$value": "80px", "$type": "dimension", "$description": "2xl" },
      "24": { "$value": "96px", "$type": "dimension" },
      "28": { "$value": "112px", "$type": "dimension" },
      "30": { "$value": "120px", "$type": "dimension", "$description": "3xl" },
      "32": { "$value": "128px", "$type": "dimension" },
      "36": { "$value": "144px", "$type": "dimension" },
      "40": { "$value": "160px", "$type": "dimension" },
      "48": { "$value": "192px", "$type": "dimension" },
      "56": { "$value": "224px", "$type": "dimension" },
      "64": { "$value": "256px", "$type": "dimension" }
    },
    "semantic": {
      "xs": { "$value": "{spacing.scale.2}", "$type": "dimension" },
      "sm": { "$value": "{spacing.scale.4}", "$type": "dimension" },
      "md": { "$value": "{spacing.scale.6}", "$type": "dimension" },
      "lg": { "$value": "{spacing.scale.10}", "$type": "dimension" },
      "xl": { "$value": "{spacing.scale.15}", "$type": "dimension" },
      "2xl": { "$value": "{spacing.scale.20}", "$type": "dimension" },
      "3xl": { "$value": "{spacing.scale.30}", "$type": "dimension" }
    },
    "section": {
      "paddingXDesktop": { "$value": "60px", "$type": "dimension" },
      "paddingXMobile": { "$value": "24px", "$type": "dimension" },
      "paddingYDesktop": { "$value": "80px", "$type": "dimension" },
      "paddingYTablet": { "$value": "60px", "$type": "dimension" },
      "paddingYMobile": { "$value": "40px", "$type": "dimension" }
    },
    "content": {
      "paragraphSpacing": { "$value": "1.5em", "$type": "dimension" },
      "sectionBreak": { "$value": "80px", "$type": "dimension" },
      "imageMargin": { "$value": "60px", "$type": "dimension" },
      "pullQuoteIsolation": { "$value": "120px", "$type": "dimension" }
    },
    "maxWidth": {
      "reading": { "$value": "680px", "$type": "dimension" },
      "content": { "$value": "800px", "$type": "dimension" },
      "display": { "$value": "1200px", "$type": "dimension" },
      "full": { "$value": "1440px", "$type": "dimension" }
    }
