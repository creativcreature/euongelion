  "components": {
    "button": {
      "height": { "$value": "48px", "$type": "dimension" },
      "heightSm": { "$value": "36px", "$type": "dimension" },
      "heightLg": { "$value": "56px", "$type": "dimension" },
      "paddingX": { "$value": "24px", "$type": "dimension" },
