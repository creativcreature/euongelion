      "fontWeight": {
        "$value": "{typography.fontWeight.medium}",
        "$type": "fontWeight"
      },
      "radius": { "$value": "{borderRadius.md}", "$type": "dimension" }
    },
    "input": {
      "height": { "$value": "48px", "$type": "dimension" },
      "paddingX": { "$value": "16px", "$type": "dimension" },
      "fontSize": {
        "$value": "{typography.fontSize.md}",
        "$type": "dimension"
      },
      "radius": { "$value": "{borderRadius.md}", "$type": "dimension" },
      "borderWidth": { "$value": "1px", "$type": "dimension" },
      "focusBorderWidth": { "$value": "2px", "$type": "dimension" }
