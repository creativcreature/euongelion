# Euangelion Environment Variables
# Copy this file to .env.local and fill in the values

# Supabase
NEXT_PUBLIC_SUPABASE_URL=        # Supabase project URL (https://xxx.supabase.co)
NEXT_PUBLIC_SUPABASE_ANON_KEY=   # Supabase anonymous/public key
SUPABASE_SERVICE_ROLE_KEY=       # Supabase service role key (server-side only)

# App
NEXT_PUBLIC_APP_URL=             # App URL (https://euangelion.app or http://localhost:3333)

# Image Generation (optional â€” for scripts/generate-illustrations.ts)
LEGNEXT_API_KEY=                 # LegNext API key for illustration generation
GEMINI_API_KEY=                  # Google Gemini API key (fallback)
