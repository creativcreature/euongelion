# Euangelion Environment Variables
# Copy this file to .env.local and fill in the values

# Supabase
NEXT_PUBLIC_SUPABASE_URL=        # Supabase project URL (https://xxx.supabase.co)
NEXT_PUBLIC_SUPABASE_ANON_KEY=   # Supabase anonymous/public key
SUPABASE_SERVICE_ROLE_KEY=       # Supabase service role key (server-side only)

# App
NEXT_PUBLIC_APP_URL=             # App URL (https://euangelion.app or http://localhost:3333)
CAPACITOR_LIVE_URL=              # Optional Capacitor server URL override (defaults to https://euangelion.app)
DAY_LOCKING_DEFAULT=off          # on/off default for day unlock cadence; testing default is off
SOUL_AUDIT_RUN_TOKEN_SECRET=     # HMAC secret for stateless audit run-token fallback
SOUL_AUDIT_ENABLED=true          # Emergency kill switch â€” set false to disable Soul Audit entirely
CLARIFIER_ENABLED=true           # Enable clarifier-once prompt for vague inputs

# Image Generation (optional)
LEGNEXT_API_KEY=                 # LegNext API key for illustration generation
GEMINI_API_KEY=                  # Google Gemini API key (fallback)
NANOBANANA_API_KEY=              # Nano-Banana provider key (server-side only)
NANOBANANA_API_URL=              # Nano-Banana generation endpoint URL
ALLOW_ILLUSTRATION_GENERATION=   # Set true to enable /api/illustrations/generate (default disabled)
SUPABASE_URL=                    # Optional server URL override; defaults to NEXT_PUBLIC_SUPABASE_URL

# Billing
STRIPE_SECRET_KEY=               # Stripe secret key for web checkout sessions
STRIPE_PRICE_PREMIUM_MONTHLY=    # Stripe price id for monthly plan
STRIPE_PRICE_PREMIUM_ANNUAL=     # Stripe price id for annual plan
NEXT_PUBLIC_REVENUECAT_IOS_API_KEY= # RevenueCat iOS public SDK key for App Store IAP
